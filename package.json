{
  "name": "aegis",
  "displayName": "Aegis",
  "version": "1.0.0",
  "description": "Browser extension for phishing detection using technical checks and LLM-based intent analysis",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@types/chrome": "^0.0.255",
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/webextension-polyfill": "^0.12.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://mail.google.com/*",
      "https://outlook.live.com/*",
      "https://outlook.office365.com/*",
      "https://outlook.office.com/*",
      "https://www.linkedin.com/*",
      "http://localhost:8000/*",
      "http://localhost:11434/*"
    ],
    "permissions": [
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "optional_permissions": [
      "notifications"
    ],
    "web_accessible_resources": [
      {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
      }
    ]
  }
}
